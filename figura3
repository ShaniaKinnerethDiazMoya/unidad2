#include <stdio.h>

int main() {
    int altura = 5;
    for (int i = 0; i < altura; i++) {
        for (int j = 0; j < altura - i - 1; j++) {
            printf(" ");
        }
        for (int j = 0; j < 2 * i + 1; j++) {
            printf("*");
        }
        printf("\n");
    }
    for (int i = altura - 2; i >= 0; i--) {
        for (int j = 0; j < altura - i - 1; j++) {
            printf(" ");
        }
        for (int j = 0; j < 2 * i + 1; j++) {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
